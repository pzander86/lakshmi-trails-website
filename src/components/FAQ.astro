---
import faqs from '../data/faqs.en.json';
---

<section id="faq" role="region" aria-labelledby="faq-heading">
  <div class="faq-header">
    <h2 id="faq-heading">Your Questions, Honestly Answered</h2>
    <div class="header-accent">
      <div class="decorative-accent" aria-hidden="true"></div>
    </div>
    <p class="faq-intro">
      We understand that choosing a journey to India is a significant decision. Here are our honest answers to the questions we hear most often.
    </p>
  </div>

  <div class="faq-container">
    {faqs.map((faq, index) => (
      <article class="faq-item" aria-labelledby={`faq-question-${index}`}>
        <details>
          <summary id={`faq-question-${index}`}>
            <span class="faq-question">{faq.question}</span>
            <span class="chevron" aria-hidden="true"></span>
          </summary>
          <div class="faq-answer">{faq.answer}</div>
        </details>
      </article>
    ))}
  </div>
</section>

<style>
  #faq {
    background: var(--color-white);
    padding: 4rem 1.5rem;
    text-align: center;
  }

  .faq-header {
    max-width: 800px;
    margin: 0 auto 2.5rem auto;
    opacity: 0;
    transform: translateY(30px);
  }

  .faq-header.intersecting {
    animation: fadeInUp 1s ease-out 0.2s forwards;
  }

  .faq-header h2 {
    font-family: var(--font-headline);
    font-size: clamp(2.2rem, 4vw, 3rem); /* Increased for contrast */
    color: var(--color-dark-gold);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .header-accent {
    margin: 1.5rem 0;
  }

  .decorative-accent {
    width: 80px;
    height: 3px;
    background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-dark-gold) 100%);
    margin: 0 auto;
    position: relative;
    border-radius: 2px;
  }

  .decorative-accent::before,
  .decorative-accent::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 10px;
    background: var(--color-gold);
    border-radius: 50%;
    top: -3.5px;
    box-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
  }

  .decorative-accent::before {
    left: -15px;
  }

  .decorative-accent::after {
    right: -15px;
  }

  .faq-intro {
    max-width: 700px;
    margin: 2rem auto;
    font-size: 1.15rem;
    line-height: 1.7;
    color: var(--color-stone);
    font-weight: 300;
  }

  .faq-container {
    max-width: 800px;
    margin: 2.5rem auto;
    text-align: left;
  }

  .faq-item {
    margin-bottom: 0.5rem; /* Reduced for closer spacing */
    opacity: 0;
    transform: translateY(30px);
  }

  .faq-item.intersecting {
    animation: fadeInUp 1s ease-out forwards;
  }

  details {
    background: var(--color-white);
    border-radius: 8px;
    border: 1px solid var(--color-mist);
    padding: 1rem;
    transition: border-color 0.3s ease;
  }

  details[open] {
    border-color: var(--color-gold);
  }

  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: bold;
    font-size: 1.1rem; /* Reduced for compactness */
    cursor: pointer;
    padding: 0.3rem; /* Reduced for compactness */
    color: var(--color-stone);
    font-family: var(--font-body);
  }

  .faq-question {
    flex: 1;
  }

  .chevron {
    width: 20px;
    height: 20px;
    background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z" fill="%23B8941F"/></svg>') no-repeat center;
    transition: transform 0.3s ease;
  }

  details[open] .chevron {
    transform: rotate(180deg);
  }

  .faq-answer {
    margin-top: 0.5rem; /* Reduced for compactness */
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-stone);
    padding: 0.5rem;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    #faq {
      padding: 3rem 1rem;
    }

    .faq-header h2 {
      font-size: clamp(2rem, 3.5vw, 2.5rem);
    }

    .faq-intro {
      font-size: 1.1rem;
    }

    .faq-item {
      margin-bottom: 0.5rem; /* Consistent spacing on mobile */
    }

    summary {
      font-size: 1rem; /* Further reduced for mobile */
    }

    .faq-answer {
      font-size: 0.95rem; /* Adjusted for mobile */
    }
  }
</style>

<!-- No script tag needed - performance-boost.js handles everything! -->