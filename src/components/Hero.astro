---
import { Image } from 'astro:assets';
import heroPlaceholder from '../assets/images/hero-placeholder.webp';
---

<!-- Preload critical resources in head -->
<link rel="preload" as="font" type="font/ttf" href="/fonts/Lato,Playfair_Display/Playfair_Display/static/PlayfairDisplay-Regular.ttf" crossorigin>
<link rel="preload" as="font" type="font/ttf" href="/fonts/Lato,Playfair_Display/Lato/Lato-Regular.ttf" crossorigin>

<section id="hero" class="scroll-section">
  <a href="#main-content" class="skip-link">Skip to content</a>
  
  <!-- Enhanced video with better fallback strategy -->
  <!-- IMPORTANT: Keep data-src for lazy loading -->
  <video 
    data-src="/assets/videos/lakshmi-trails-hero.webm"
    autoplay 
    muted 
    loop 
    playsinline 
    preload="metadata" 
    poster={heroPlaceholder.src} 
    aria-label="Background video of a South Indian temple" 
    class="hero-video"
  >
    <source data-src="/assets/videos/lakshmi-trails-hero-720p.webm" type="video/webm" media="(max-width: 768px)">
    <source data-src="/assets/videos/lakshmi-trails-hero.webm" type="video/webm">
    <source data-src="/assets/videos/lakshmi-trails-hero-720p.mp4" type="video/mp4" media="(max-width: 768px)">
    <source data-src="/assets/videos/lakshmi-trails-hero.mp4" type="video/mp4">
  </video>
  
  <!-- Enhanced fallback for reduced motion users and video errors -->
  <div class="hero-image-fallback" role="img" aria-label="South Indian temple">
    <picture>
      <source media="(max-width: 768px)" srcset="/assets/images/hero-mobile-800.webp">
      <source media="(min-width: 769px)" srcset="/assets/images/hero-desktop-1920.webp">
      <img src="/assets/images/hero-placeholder.webp" alt="Sacred temple in South India" loading="eager" fetchpriority="high">
    </picture>
  </div>

  <div class="hero-content fade-in-up">
    <h1>
      Intimate <span class="highlight">cultural journeys</span> into
      <br><span class="subtitle">South India's sacred heart</span>
    </h1>
    <p class="tagline">Guided with care, crafted for transformation. For discerning travelers seeking authentic connection with India's spiritual essence.</p>
    <a href="#tours" class="cta-button" data-test="hero_cta">
      <span>Discover Upcoming Journeys</span>
    </a>
  </div>

  <div class="scroll-indicator" aria-hidden="true" role="presentation"></div>
</section>

<style>
  /* Hero Section - Optimized */
  #hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    color: var(--color-white);
    contain: layout style paint; /* Performance optimization */
  }

  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .hero-video.error {
    opacity: 0;
  }

  .hero-image-fallback {
    position: absolute;
    inset: 0;
    z-index: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .hero-image-fallback.show,
  .hero-video.error + .hero-image-fallback {
    opacity: 1;
  }

  .hero-image-fallback img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Show fallback for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-video {
      opacity: 0;
    }
    .hero-image-fallback {
      opacity: 1;
    }
  }

  #hero::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.6) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 400;
    margin-bottom: 2.5rem;
    line-height: 1.3;
    text-shadow: 0 4px 20px rgba(0,0,0,0.4);
    font-family: var(--font-headline);
    color: var(--color-white);
    letter-spacing: -0.02em;
  }

  .hero-content h1 .highlight {
    color: var(--color-gold);
    font-style: italic;
  }

  .hero-content h1 .subtitle {
    font-size: 0.9em;
    opacity: 0.95;
    font-weight: 300;
  }

  .hero-content p.tagline {
    color: rgba(249, 249, 249, 0.95);
    font-size: clamp(1.1rem, 2.8vw, 1.25rem);
    font-weight: 400;
    max-width: 650px;
    line-height: 1.65;
    margin: 0 auto 4rem auto;
    letter-spacing: 0.4px;
    font-family: var(--font-body);
    text-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  /* CTA Button styles now centralized in Layout.astro */

  .skip-link {
    position: absolute;
    top: -1000px;
    left: 0;
    padding: 0.5rem;
    background: var(--color-gold);
    color: #000;
    z-index: 1000;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
  }

  .skip-link:focus {
    top: 1rem;
    left: 1rem;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    opacity: 0.8;
  }

  .scroll-indicator::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    width: 1px;
    height: 30px;
    background: linear-gradient(to bottom, transparent, var(--color-white), transparent);
    transform: translateX(-50%);
    animation: scrollLine 2s infinite ease-in-out;
  }

  .scroll-indicator::after {
    content: '';
    width: 20px;
    height: 20px;
    border-right: 2px solid var(--color-white);
    border-bottom: 2px solid var(--color-white);
    transform: rotate(45deg);
    animation: scrollArrow 2s infinite ease-in-out;
    display: block;
  }

  @keyframes scrollLine {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  @keyframes scrollArrow {
    0%, 20%, 50%, 80%, 100% {
      transform: rotate(45deg) translateY(0);
      opacity: 0.6;
    }
    40% {
      transform: rotate(45deg) translateY(-8px);
      opacity: 1;
    }
    60% {
      transform: rotate(45deg) translateY(-4px);
      opacity: 0.8;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content h1 {
      margin-bottom: 2rem;
    }

    .hero-content p.tagline {
      font-size: clamp(1rem, 3vw, 1.1rem);
      margin-bottom: 3rem;
    }

    .cta-button {
      padding: 0.9rem 2rem;
      font-size: 0.9rem;
    }

    .scroll-indicator {
      bottom: 2rem;
    }

    .scroll-indicator::after {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    #hero {
      padding: 1rem;
    }
  }
</style>

<!-- No script tag needed - performance-boost.js handles everything! -->