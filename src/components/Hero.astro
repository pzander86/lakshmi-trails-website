---
import "../styles/global.css";
---

<section id="hero">
  <a href="#main-content" class="skip-link">Skip to content</a>
  
  <video autoplay muted loop playsinline preload="metadata" poster="/assets/images/hero-placeholder.webp" aria-label="Background video of a South Indian temple" class="hero-video">
    <source src="/assets/videos/lakshmi-trails-hero.webv" type="video/webm" />
    <source src="/assets/videos/lakshmi-trails-hero.mp4" type="video/mp4" />
  </video>
  
  <!-- Fallback for reduced motion users and video errors -->
  <div class="hero-image-fallback" role="img" aria-label="South Indian temple"></div>

  <div class="hero-content">
    <h1>
      Intimate <span class="highlight">cultural journeys</span> into
      <br><span class="subtitle">South India's sacred heart</span>
    </h1>
    <p class="tagline">Guided with care, crafted for transformation. For discerning travelers seeking authentic connection with India's spiritual essence.</p>
    <a href="#tours" class="cta-button">
      <span>Discover Upcoming Journeys</span>
    </a>
  </div>

  <div class="scroll-indicator" aria-hidden="true" role="presentation"></div>
</section>

<style>
  /* Hero Section */
  #hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    color: var(--color-white);
  }

  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-image-fallback {
    position: absolute;
    inset: 0;
    background: url('/assets/images/hero-placeholder.webp') center/cover no-repeat;
    opacity: 0;
    z-index: 0;
    transition: opacity 0.3s ease;
  }

  /* Show fallback for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-video {
      opacity: 0;
    }
    .hero-image-fallback {
      opacity: 1;
    }
  }

  #hero::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.6) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    animation: fadeInUp 1.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 400;
    margin-bottom: 2.5rem;
    line-height: 1.3;
    text-shadow: 0 4px 20px rgba(0,0,0,0.4);
    font-family: var(--font-headline);
    color: var(--color-white);
    letter-spacing: -0.02em;
  }

  .hero-content h1 .highlight {
    color: var(--color-gold);
    font-style: italic;
  }

  .hero-content h1 .subtitle {
    font-size: 0.9em;
    opacity: 0.95;
    font-weight: 300;
  }

  .hero-content p.tagline {
    color: rgba(249, 249, 249, 0.95);
    font-size: clamp(1.1rem, 2.8vw, 1.25rem);
    font-weight: 400;
    max-width: 650px;
    line-height: 1.65;
    margin: 0 auto 4rem auto;
    letter-spacing: 0.4px;
    font-family: var(--font-body);
    text-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-dark-gold) 100%);
    color: #000;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    border-radius: 8px;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-transform: uppercase;
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
    font-family: var(--font-body);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-white) 0%, rgba(249, 249, 249, 0.9) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .cta-button:hover::before,
  .cta-button:focus::before {
    opacity: 1;
  }

  .cta-button:hover, .cta-button:focus {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(212, 175, 55, 0.4);
    outline: none;
  }

  .cta-button span {
    position: relative;
    z-index: 1;
  }

  .skip-link {
    position: absolute;
    top: -1000px;
    left: 0;
    padding: 0.5rem;
    background: var(--color-gold);
    color: #000;
    z-index: 1000;
  }

  .skip-link:focus {
    top: 0;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    opacity: 0.8;
  }

  .scroll-indicator::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    width: 1px;
    height: 30px;
    background: linear-gradient(to bottom, transparent, var(--color-white), transparent);
    transform: translateX(-50%);
    animation: scrollLine 2s infinite ease-in-out;
  }

  .scroll-indicator::after {
    content: '';
    width: 20px;
    height: 20px;
    border-right: 2px solid var(--color-white);
    border-bottom: 2px solid var(--color-white);
    transform: rotate(45deg);
    animation: scrollArrow 2s infinite ease-in-out;
    display: block;
  }

  /* Animations */
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scrollLine {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  @keyframes scrollArrow {
    0%, 20%, 50%, 80%, 100% {
      transform: rotate(45deg) translateY(0);
      opacity: 0.6;
    }
    40% {
      transform: rotate(45deg) translateY(-8px);
      opacity: 1;
    }
    60% {
      transform: rotate(45deg) translateY(-4px);
      opacity: 0.8;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content h1 {
      margin-bottom: 2rem;
    }

    .hero-content p.tagline {
      font-size: clamp(1rem, 3vw, 1.1rem);
      margin-bottom: 3rem;
    }

    .cta-button {
      padding: 0.9rem 2rem;
      font-size: 0.9rem;
    }

    .scroll-indicator {
      bottom: 2rem;
    }

    .scroll-indicator::after {
      width: 24px;
      height: 24px;
    }
  }

  @media (max-width: 480px) {
    #hero {
      padding: 1rem;
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      animation: none;
      opacity: 1;
      transform: none;
    }
    
    .scroll-indicator::before,
    .scroll-indicator::after {
      animation: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.querySelector('.hero-video');
    const fallbackImage = document.querySelector('.hero-image-fallback');
    
    // Enhanced video performance with error handling
    const observer = new IntersectionObserver(
      ([entry]) => {
        if (!entry.isIntersecting) {
          video?.pause();
        } else {
          video?.play().catch(() => {
            // Fallback to image if video fails
            if (fallbackImage) {
              fallbackImage.style.opacity = '1';
              video.style.opacity = '0';
            }
          });
        }
      },
      { threshold: 0.1 }
    );
    
    if (video) observer.observe(video);

    const ctaButton = document.querySelector('.cta-button');
    if (ctaButton) {
      ctaButton.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = ctaButton.getAttribute('href');
        const target = document.querySelector(targetId);
        if (target) {
          target.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }

    // Lightweight preload for next section (runs after 2s to not impact hero load)
    setTimeout(() => {
      const nextSection = document.querySelector('section:nth-of-type(2)');
      if (nextSection) {
        const images = nextSection.querySelectorAll('img[data-src]');
        images.forEach(img => {
          if (img.dataset.src) {
            const preloadImg = new Image();
            preloadImg.src = img.dataset.src;
          }
        });
      }
    }, 2000);
  });
</script>