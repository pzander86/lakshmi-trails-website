---
import { Image } from 'astro:assets';
import Layout from '../../layouts/layout.astro';

export async function getStaticPaths() {
  let tours = [];
  try {
    tours = (await import('../../data/tours.en.json')).default || [];
  } catch (error) {
    console.error('Error loading tours data:', error);
    tours = [];
  }

  return tours.map((tour) => ({
    params: { slug: tour.slug },
    props: { tour, tours }, // Pass all tours for cross-linking
  }));
}

const { tour, tours } = Astro.props;

const structuredData = tour.schema;

// Prepare meta data for your Layout component
const meta = {
  title: `${tour.name} | Lakshmi Trails`,
  description: tour.shortDescription,
  image: `https://lakshmitrails.com${tour.image}`,
  url: `https://lakshmitrails.com/tours/${tour.slug}/`
};
---

<Layout {meta}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://lakshmitrails.com"
      },
      {
        "@type": "ListItem", 
        "position": 2,
        "name": "Tours",
        "item": "https://lakshmitrails.com/#tours"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": tour.title,
        "item": `https://lakshmitrails.com/tours/${tour.slug}/`
      }
    ]
  })}></script>

  <!-- Hero Section -->
  <section id="hero" class="tour-hero">
    <Image
      src={tour.image}
      alt={`${tour.title} - ${tour.shortDescription}`}
      width={1600}
      height={900}
      loading="eager"
      format="webp"
      class="hero-image"
    />
    <div class="hero-overlay"></div>
    
    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
      <ol>
        <li><a href="/">Home</a></li>
        <li><a href="/#tours">Tours</a></li>
        <li aria-current="page">{tour.title}</li>
      </ol>
    </nav>

    <div class="hero-content">
      <h1>{tour.title}</h1>
      <p class="hero-subtitle">{tour.name}</p>
      <div class="hero-details">
        <span class="dates">{tour.dates}</span>
        <span class="price">{tour.price}</span>
      </div>
      <a href="#overview" class="cta-button">
        <span>Explore This Journey</span>
      </a>
    </div>

    <div class="scroll-indicator" aria-hidden="true"></div>
  </section>

  <!-- Tour Overview -->
  <section id="overview" class="tour-overview">
    <div class="overview-container">
      <header class="section-header">
        <h2>Journey Overview</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
      </header>
      
      <div class="overview-content">
        <div class="main-description">
          <p class="description-intro">{tour.description}</p>
          
          <div class="tour-highlights">
            <h3>Sacred Experiences Await</h3>
            <ul class="highlights-list">
              {tour.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        </div>

        <div class="tour-details-sidebar">
          <div class="details-card">
            <h3>Journey Details</h3>
            <div class="detail-item">
              <span class="label">Duration</span>
              <span class="value">15 Days</span>
            </div>
            <div class="detail-item">
              <span class="label">Dates</span>
              <span class="value">{tour.dates}</span>
            </div>
            <div class="detail-item">
              <span class="label">Group Size</span>
              <span class="value">12-16 Travelers</span>
            </div>
            <div class="detail-item">
              <span class="label">Investment</span>
              <span class="value price-highlight">{tour.price}</span>
            </div>
            {tour.earlyBirdPrice < tour.regularPrice && (
              <div class="early-bird-note">
                <span class="early-bird-price">Early Bird: ${tour.earlyBirdPrice}</span>
                <span class="early-bird-until">Valid until {new Date(tour.earlyBirdValidUntil).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
              </div>
            )}
          </div>

          <div class="traveler-types">
            <h4>Perfect For</h4>
            <div class="types-list">
              {tour.touristTypes.map((type) => (
                <span class="type-tag">{type}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Sacred Journeys -->
  <section id="other-journeys" class="other-journeys-section">
    <div class="other-journeys-container">
      <header class="section-header">
        <h2>Other Sacred Journeys</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
        <p class="section-intro">
          Each path offers its own unique transformation. Explore our other sacred journeys.
        </p>
      </header>
      
      <div class="other-journeys-grid">
        {tours.filter(t => t.slug !== tour.slug).map((otherTour) => (
          <article class="journey-card">
            <div class="journey-image">
              <Image
                src={otherTour.image}
                alt={`${otherTour.title} - ${otherTour.shortDescription}`}
                width={400}
                height={250}
                loading="lazy"
                format="webp"
              />
            </div>
            <div class="journey-content">
              <h3>{otherTour.title}</h3>
              <p class="journey-dates">{otherTour.dates}</p>
              <p class="journey-description">{otherTour.shortDescription}</p>
              <div class="journey-actions">
                <a href={`/tours/${otherTour.slug}/`} class="journey-link">
                  <span>Explore Journey</span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12,5 19,12 12,19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section id="reserve" class="reserve-section">
    <div class="reserve-container">
      <div class="reserve-content">
        <h2>Reserve Your Sacred Journey</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
        <p class="reserve-intro">
          Every traveler has unique needs and interests. Let's discuss how we can tailor this transformational experience to your personal journey.
        </p>
        <div class="reserve-actions">
          <a href="/contact" class="reserve-button primary">
            <span>Reserve Your Spot</span>
          </a>
          <a href={tour.pdf} target="_blank" class="reserve-button secondary">
            <span>Download Detailed Itinerary</span>
          </a>
        </div>
        <p class="reserve-note">
          <strong>Limited to 16 travelers</strong> for intimate, authentic encounters with expert guidance throughout your cultural immersion.
        </p>
      </div>
    </div>
  </section>
</Layout>

