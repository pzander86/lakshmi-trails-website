---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  let tours = [];
  try {
    tours = (await import('../../data/tours.en.json')).default || [];
  } catch (error) {
    console.error('Error loading tours data:', error);
    tours = [];
  }

  return tours.map((tour) => ({
    params: { slug: tour.slug },
    props: { tour, tours }, // Pass all tours for cross-linking
  }));
}

const { tour, tours } = Astro.props;

const structuredData = tour.schema;

// Prepare meta data for your Layout component
const meta = {
  title: `${tour.name} | Lakshmi Trails`,
  description: tour.shortDescription,
  image: `https://lakshmitrails.com${tour.image}`,
  url: `https://lakshmitrails.com/tours/${tour.slug}/`
};
---

<Layout {meta}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://lakshmitrails.com"
      },
      {
        "@type": "ListItem", 
        "position": 2,
        "name": "Tours",
        "item": "https://lakshmitrails.com/#tours"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": tour.title,
        "item": `https://lakshmitrails.com/tours/${tour.slug}/`
      }
    ]
  })}></script>

  <!-- SECTION 1: Hero Section -->
  <section id="hero" class="tour-hero">
    <a href="#main-content" class="skip-link">Skip to content</a>
    
    <Image
      src={tour.image}
      alt={`${tour.title} - ${tour.shortDescription}`}
      width={1600}
      height={900}
      loading="eager"
      format="webp"
      class="hero-image"
    />
    <div class="hero-overlay"></div>
    
    <!-- Simple Navigation -->
    <nav class="hero-nav" aria-label="Main navigation">
      <a href="/" class="nav-home">← Back to Home</a>
      <a href="/#tours" class="nav-tours">All Journeys</a>
    </nav>

    <div class="hero-content">
      <h1 style="color: white !important;">
        <span class="highlight" style="color: #D4AF37 !important;">{tour.title}</span>
        <br><span class="subtitle" style="color: white !important;">{tour.name}</span>
      </h1>
      <p class="tagline" style="color: rgba(249, 249, 249, 0.95) !important;">
        <span class="dates-info" style="color: #D4AF37 !important;">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" style="color: #D4AF37 !important;">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          {tour.dates}
        </span>
        •
        <span class="price-info" style="color: white !important;">{tour.price}</span>
      </p>
      <a href="#overview" class="cta-button" style="display: inline-block !important; background: linear-gradient(135deg, #D4AF37 0%, #B8941F 100%) !important; color: #000 !important; padding: 1rem 2.5rem !important; border-radius: 8px !important; text-decoration: none !important; font-weight: 500 !important; text-transform: uppercase !important; box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3) !important; margin-top: 2rem !important;">
        <span style="position: relative; z-index: 1;">Explore This Journey</span>
      </a>
    </div>

    <div class="scroll-indicator" aria-hidden="true" role="presentation"></div>
  </section>

  <!-- SECTION 2: Tour Overview -->
  <section id="overview" class="tour-overview" role="region" aria-labelledby="overview-heading">
    <div class="overview-container">
      <header class="section-header">
        <h2 id="overview-heading">Journey Overview</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
      </header>
      
      <div class="overview-content">
        <div class="main-description">
          <p class="description-intro">{tour.description}</p>
          
          <div class="tour-highlights">
            <h3>Sacred Experiences Await</h3>
            <ul class="highlights-list">
              {tour.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        </div>

        <div class="tour-details-sidebar">
          <div class="details-card">
            <h3>Journey Details</h3>
            <div class="detail-item">
              <span class="label">Duration</span>
              <span class="value">15 Days</span>
            </div>
            <div class="detail-item">
              <span class="label">Dates</span>
              <span class="value">{tour.dates}</span>
            </div>
            <div class="detail-item">
              <span class="label">Group Size</span>
              <span class="value">12-16 Travelers</span>
            </div>
            <div class="detail-item">
              <span class="label">Investment</span>
              <span class="value price-highlight">{tour.price}</span>
            </div>
            {tour.earlyBirdPrice < tour.regularPrice && (
              <div class="early-bird-note">
                <span class="early-bird-price">Early Bird: ${tour.earlyBirdPrice}</span>
                <span class="early-bird-until">Valid until {new Date(tour.earlyBirdValidUntil).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
              </div>
            )}
          </div>

          <div class="traveler-types">
            <h4>Perfect For</h4>
            <div class="types-list">
              {tour.touristTypes.map((type) => (
                <span class="type-tag">{type}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SECTION 3: Reserve Your Sacred Journey -->
  <section id="reserve" class="reserve-section" role="region" aria-labelledby="reserve-heading">
    <div class="reserve-container">
      <div class="reserve-content">
        <h2 id="reserve-heading">Reserve Your Sacred Journey</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
        <p class="reserve-intro">
          Every traveler has unique needs and interests. <span class="highlight-text">Let's discuss how we can tailor this transformational experience to your personal journey.</span>
        </p>
        <div class="reserve-actions">
          <a href={tour.pdf} target="_blank" class="cta-button secondary" aria-label={`Download detailed itinerary for ${tour.title}`} style="display: inline-block !important; background: transparent !important; color: #B8941F !important; padding: 1rem 2.5rem !important; border: 2px solid #D4AF37 !important; border-radius: 8px !important; text-decoration: none !important; font-weight: 500 !important; text-transform: uppercase !important; box-shadow: 0 4px 15px rgba(212, 175, 55, 0.15) !important; margin-right: 1.5rem !important;">
            <span style="position: relative; z-index: 1;">Download Detailed Itinerary</span>
          </a>
          <a href="/contact" class="cta-button" aria-label={`Reserve your spot for ${tour.title}`} style="display: inline-block !important; background: linear-gradient(135deg, #D4AF37 0%, #B8941F 100%) !important; color: #000 !important; padding: 1rem 2.5rem !important; border-radius: 8px !important; text-decoration: none !important; font-weight: 500 !important; text-transform: uppercase !important; box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3) !important;">
            <span style="position: relative; z-index: 1;">Reserve Your Spot</span>
          </a>
        </div>
        <p class="reserve-note">
          <strong>Limited to 16 travelers</strong> for intimate, authentic encounters with expert guidance throughout your cultural immersion.
        </p>
      </div>
    </div>
  </section>

  <!-- SECTION 4: Other Sacred Journeys with NEGATIVE MARGIN -->
  <section id="other-journeys" class="other-journeys-section" role="region" aria-labelledby="other-journeys-heading" style="margin-top: -4rem !important;">
    <div class="other-journeys-container">
      <header class="section-header">
        <h2 id="other-journeys-heading" style="font-family: var(--font-headline) !important; font-size: clamp(2.4rem, 4.5vw, 3.2rem) !important; color: var(--color-dark-gold) !important;">Explore Other Journeys</h2>
        <div class="decorative-accent" aria-hidden="true"></div>
        <p class="section-intro">
          Each path offers its own unique transformation. Discover which sacred journey calls to your soul.
        </p>
      </header>
      
      <div class="other-journeys-grid">
        {tours.filter(t => t.slug !== tour.slug).map((otherTour) => (
          <article class="journey-card">
            <div class="journey-image">
              <Image
                src={otherTour.image}
                alt={`${otherTour.title} - ${otherTour.shortDescription}`}
                width={400}
                height={250}
                loading="lazy"
                format="webp"
              />
              <div class="journey-price-badge">{otherTour.price}</div>
            </div>
            <div class="journey-content">
              <h3>{otherTour.title}</h3>
              <p class="journey-dates">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                {otherTour.dates}
              </p>
              <p class="journey-description">{otherTour.shortDescription}</p>
              <div style="display: grid !important; grid-template-columns: 1fr 1fr 1fr !important; gap: 0.5rem !important; margin-top: auto !important; padding-top: 1rem !important;">
                <a href={otherTour.pdf || '#'} download aria-label={`Download itinerary for ${otherTour.title}`} style="display: flex !important; align-items: center !important; justify-content: center !important; gap: 0.4rem !important; padding: 0.7rem 0.8rem !important; border-radius: 8px !important; font-size: 0.85rem !important; font-weight: 500 !important; text-decoration: none !important; background: rgba(249, 249, 249, 0.8) !important; color: #333333 !important; border: 1px solid rgba(212, 175, 55, 0.3) !important; font-family: var(--font-body) !important; position: relative !important; overflow: hidden !important; transition: all 0.3s ease !important;">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7,10 12,15 17,10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  <span style="position: relative !important; z-index: 1 !important;">Itinerary</span>
                </a>
                <a href={`/tours/${otherTour.slug}/`} aria-label={`Explore ${otherTour.title} journey`} style="display: flex !important; align-items: center !important; justify-content: center !important; gap: 0.4rem !important; padding: 0.7rem 0.8rem !important; border-radius: 8px !important; font-size: 0.85rem !important; font-weight: 500 !important; text-decoration: none !important; background: rgba(212, 175, 55, 0.1) !important; color: #B8941F !important; border: 1px solid rgba(212, 175, 55, 0.3) !important; font-family: var(--font-body) !important; position: relative !important; overflow: hidden !important; transition: all 0.3s ease !important;">
                  <span style="position: relative !important; z-index: 1 !important;">Explore Journey</span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" style="position: relative !important; z-index: 1 !important;">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12,5 19,12 12,19"></polyline>
                  </svg>
                </a>
                <a href="/contact" aria-label={`Reserve your spot for ${otherTour.title}`} style="display: flex !important; align-items: center !important; justify-content: center !important; gap: 0.4rem !important; padding: 0.7rem 0.8rem !important; border-radius: 8px !important; font-size: 0.85rem !important; font-weight: 500 !important; text-decoration: none !important; background: linear-gradient(135deg, #D4AF37 0%, #B8941F 100%) !important; color: #000 !important; box-shadow: 0 4px 15px rgba(212, 175, 55, 0.25) !important; font-family: var(--font-body) !important; position: relative !important; overflow: hidden !important; transition: all 0.3s ease !important;">
                  <span style="position: relative !important; z-index: 1 !important;">Reserve</span>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" style="position: relative !important; z-index: 1 !important;">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 6v6l4 2"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  #hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
    color: var(--color-white);
  }

  .hero-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.7) 100%);
    z-index: 1;
  }

  .skip-link {
    position: absolute;
    top: -1000px;
    left: 0;
    padding: 0.5rem;
    background: var(--color-gold);
    color: #000;
    z-index: 1000;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Hero Navigation */
  .hero-nav {
    position: absolute;
    top: 2rem;
    left: 2rem;
    z-index: 3;
    display: flex;
    gap: 1.5rem;
    opacity: 0;
    transform: translateY(-20px);
    animation: fadeInDown 1s cubic-bezier(0.4, 0, 0.2, 1) 0.5s forwards;
  }

  .hero-nav a {
    color: rgba(249, 249, 249, 0.9);
    text-decoration: none;
    font-size: 0.9rem;
    font-family: var(--font-body);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .hero-nav a:hover,
  .hero-nav a:focus {
    color: var(--color-white);
    background: rgba(212, 175, 55, 0.2);
    border-color: rgba(212, 175, 55, 0.3);
    transform: translateY(-1px);
    outline: none;
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    animation: fadeInUp 1.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 400;
    margin-bottom: 2.5rem;
    line-height: 1.3;
    text-shadow: 0 4px 20px rgba(0,0,0,0.4);
    font-family: var(--font-headline);
    color: var(--color-white);
    letter-spacing: -0.02em;
  }

  .hero-content h1 .highlight {
    color: var(--color-gold);
    font-style: italic;
  }

  .hero-content h1 .subtitle {
    font-size: 0.65em;
    opacity: 0.95;
    font-weight: 300;
    font-style: normal;
  }

  .hero-content .tagline {
    color: rgba(249, 249, 249, 0.95);
    font-size: clamp(1.1rem, 2.8vw, 1.25rem);
    font-weight: 400;
    max-width: 650px;
    line-height: 1.65;
    margin: 0 auto 4rem auto;
    letter-spacing: 0.4px;
    font-family: var(--font-body);
    text-shadow: 0 2px 8px rgba(0,0,0,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .dates-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-gold);
    font-weight: 500;
  }

  .dates-info svg {
    color: var(--color-gold);
    flex-shrink: 0;
  }

  .price-info {
    color: var(--color-white);
    font-weight: 600;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-dark-gold) 100%);
    color: #000;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    border-radius: 8px;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    text-transform: uppercase;
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
    font-family: var(--font-body);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-white) 0%, rgba(249, 249, 249, 0.9) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .cta-button:hover::before,
  .cta-button:focus::before {
    opacity: 1;
  }

  .cta-button:hover, .cta-button:focus {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(212, 175, 55, 0.4);
    outline: none;
  }

  .cta-button span {
    position: relative;
    z-index: 1;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    opacity: 0.8;
  }

  .scroll-indicator::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 50%;
    width: 1px;
    height: 30px;
    background: linear-gradient(to bottom, transparent, var(--color-white), transparent);
    transform: translateX(-50%);
    animation: scrollLine 2s infinite ease-in-out;
  }

  .scroll-indicator::after {
    content: '';
    width: 20px;
    height: 20px;
    border-right: 2px solid var(--color-white);
    border-bottom: 2px solid var(--color-white);
    transform: rotate(45deg);
    animation: scrollArrow 2s infinite ease-in-out;
    display: block;
  }

  /* FORCE SECTION ORDER WITH CSS */
  .tour-hero { order: 1; }
  .tour-overview { order: 2; }
  .reserve-section { order: 3; }
  .other-journeys-section { order: 4; }

  /* Tour Overview Section */
  .tour-overview {
    background: var(--color-mist);
    padding: 7rem 2rem 4rem 2rem;
    scroll-margin-top: 80px;
  }

  .overview-container {
    max-width: 1300px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    opacity: 0;
    transform: translateY(30px);
  }

  .section-header.intersecting {
    animation: fadeInUp 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.1s forwards;
  }

  .section-header h2 {
    font-family: var(--font-headline);
    font-size: clamp(2.4rem, 4.5vw, 3.2rem);
    color: var(--color-dark-gold);
    margin-bottom: 1rem;
    line-height: 1.15;
    font-weight: 500;
    text-shadow: 0 2px 12px rgba(212, 175, 55, 0.15);
    letter-spacing: -0.01em;
  }

  .decorative-accent {
    width: 80px;
    height: 3px;
    background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-dark-gold) 100%);
    margin: 2rem auto 0 auto;
    position: relative;
    border-radius: 2px;
  }

  .decorative-accent::before,
  .decorative-accent::after {
    content: '';
    position: absolute;
    width: 10px;
    height: 10px;
    background: var(--color-gold);
    border-radius: 50%;
    top: -3.5px;
    box-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
  }

  .decorative-accent::before {
    left: -15px;
  }

  .decorative-accent::after {
    right: -15px;
  }

  .overview-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    opacity: 0;
    transform: translateY(30px);
  }

  .overview-content.intersecting {
    animation: fadeInUp 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.3s forwards;
  }

  .description-intro {
    font-size: clamp(1.2rem, 2.8vw, 1.3rem);
    line-height: 1.75;
    color: var(--color-stone);
    margin-bottom: 3rem;
    font-weight: 400;
    font-style: italic;
    font-family: var(--font-body);
  }

  .tour-highlights h3 {
    font-family: var(--font-headline);
    color: var(--color-dark-gold);
    font-size: clamp(1.5rem, 3vw, 1.8rem);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .highlights-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .highlights-list li {
    padding: 1rem 0;
    border-bottom: 1px solid rgba(212, 175, 55, 0.15);
    font-size: clamp(1rem, 2vw, 1.1rem);
    line-height: 1.6;
    color: var(--color-stone);
    font-family: var(--font-body);
    position: relative;
    padding-left: 2rem;
  }

  .highlights-list li:before {
    content: '✦';
    position: absolute;
    left: 0;
    color: var(--color-gold);
    font-size: 1.2em;
  }

  .highlights-list li:last-child {
    border-bottom: none;
  }

  /* Sidebar */
  .tour-details-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .details-card {
    background: rgba(249, 249, 249, 0.95);
    padding: 2.5rem 2rem;
    border-radius: 24px;
    border: 1px solid rgba(212, 175, 55, 0.12);
    box-shadow: 
      0 20px 60px rgba(51, 51, 51, 0.15),
      0 8px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    backdrop-filter: blur(10px);
    position: relative;
  }

  .details-card:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 30px 80px rgba(51, 51, 51, 0.2),
      0 12px 35px rgba(0, 0, 0, 0.12);
  }

  .details-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(135deg, var(--color-gold) 0%, var(--color-dark-gold) 100%);
    border-radius: 24px 24px 0 0;
  }

  .details-card h3 {
    font-family: var(--font-headline);
    color: var(--color-dark-gold);
