---
import Layout from '../layouts/Layout.astro';
import CTAButton from '../components/CTAButton.astro';

const meta = {
  title: '404 - Page Not Found | Lakshmi Trails',
  description: 'The page you are looking for could not be found. Explore our sacred wellness journeys to South India.',
  image: '/assets/og-image-PLACEHOLDER.jpg',
  url: 'https://lakshmitrails.com/404'
};
---

<Layout meta={meta}>
  <main class="error-page">
    <div class="error-container">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Path Not Found</h2>
        <p class="error-message">
          The sacred path you seek does not exist in our current realm. 
          Perhaps your journey leads elsewhere?
        </p>
        
        <div class="error-actions">
          <CTAButton 
            href="/"
            text="Return Home"
            variant="primary"
            size="large"
          />
          <CTAButton 
            href="#tours"
            text="Explore Journeys"
            variant="outline"
            size="large"
          />
        </div>

        <div class="error-suggestions">
          <h3>Popular Destinations</h3>
          <ul>
            <li><a href="/tours/new-year-kerala-journey/">New Year Kerala Journey</a></li>
            <li><a href="/tours/north-kerala-cultural-immersion/">North Kerala Cultural Immersion</a></li>
            <li><a href="/tours/karnataka-wellness-immersion/">Karnataka Wellness Immersion</a></li>
            <li><a href="/#contact">Contact Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-mist) 0%, var(--color-white) 100%);
    padding: 2rem;
  }

  .error-container {
    max-width: 600px;
    text-align: center;
    background: var(--color-white);
    padding: 4rem 3rem;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(51, 51, 51, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.1);
  }

  .error-code {
    font-family: var(--font-headline);
    font-size: clamp(4rem, 8vw, 6rem);
    color: var(--color-gold);
    margin-bottom: 1rem;
    line-height: 1;
    text-shadow: 0 4px 20px rgba(212, 175, 55, 0.2);
  }

  .error-title {
    font-family: var(--font-headline);
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--color-dark-gold);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .error-message {
    font-size: 1.1rem;
    color: var(--color-stone);
    line-height: 1.6;
    margin-bottom: 3rem;
    opacity: 0.9;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .error-suggestions {
    border-top: 1px solid rgba(212, 175, 55, 0.2);
    padding-top: 2rem;
    margin-top: 2rem;
  }

  .error-suggestions h3 {
    font-family: var(--font-headline);
    color: var(--color-dark-gold);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .error-suggestions ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-suggestions li {
    margin-bottom: 0.5rem;
  }

  .error-suggestions a {
    color: var(--color-stone);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.95rem;
  }

  .error-suggestions a:hover {
    color: var(--color-gold);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .error-container {
      padding: 3rem 2rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .error-actions .cta-button {
      width: 100%;
      max-width: 280px;
    }
  }
</style>