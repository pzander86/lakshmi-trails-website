---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import Hero from '../components/Hero.astro';
import Guide from '../components/Guide.astro';
import About from '../components/About.astro';
import Philosophy from '../components/Philosophy.astro';
import Tours from '../components/Tours.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import toursData from '../data/tours.en.json';

const meta = {
  title: 'Lakshmi Trails | South India Retreats for Inner Transformation',
  description: 'Boutique wellness journeys blending yoga, Ayurveda, and living traditions. Curated access to South India\'s healing heritage, with modern safety and trusted care.',
  image: '/assets/og-image-PLACEHOLDER.jpg',
  url: 'https://lakshmitrails.com'
};
---

<Layout meta={meta}>
  <div id="top"></div>
  <NavBar />
  <Hero />
  <main id="main-content">
    <Guide />
    <About />
    <Philosophy />
    <Tours />
    <FAQ />
    <Contact />
  </main>
  <Footer />

  <!-- Travel Agency Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "TravelAgency",
      "name": "Lakshmi Trails",
      "description": "Boutique wellness journeys blending yoga, Ayurveda, and South Indian heritage. Safe, curated, and transformational cultural travel.",
      "url": "https://lakshmitrails.com",
      "telephone": "+1-347-414-6099",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Port Richey",
        "addressRegion": "FL",
        "addressCountry": "US"
      },
      "areaServed": ["Kerala", "Tamil Nadu", "Karnataka"],
      "serviceType": [
        "Wellness Journeys",
        "Cultural Tours",
        "Yoga Travel",
        "Ayurvedic Treatments",
        "Spiritual Travel",
        "Heritage Experiences"
      ],
      "priceRange": "$$-$$$"
    }
  </script>

  <!-- Dynamic Tour Schemas from JSON -->
  {toursData.map(tour => (
    <script type="application/ld+json" set:html={JSON.stringify(tour.schema)} />
  ))}
</Layout>